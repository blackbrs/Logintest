<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Wallpaper.NoTitleBar"
    android:background="@color/Login"
    tools:context="creator.test.logintest.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/registrar"
        android:layout_marginTop="42dp"
        app:srcCompat="@drawable/logo_eisi" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="  Usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/usuario"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="45dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_key"
        android:ems="10"
        android:hint=" ContraseÃ±a"
        android:inputType="textPassword"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8sp"
        android:text="Cuestionarios EISI"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/iniciarsesion"
        android:layout_width="150sp"
        android:layout_height="25sp"
        android:layout_below="@+id/contra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/borde_redondo"
        android:onClick="ingresar"
        android:text="Iniciar Sesion"
        android:textSize="16sp" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/borde_redondo"
        android:backgroundTint="@color/Login"
        android:onClick="onClick"
        android:text="Registrar Usuario"
        android:textColor="@color/linkBlue"
        android:textStyle="" />


</RelativeLayout>
