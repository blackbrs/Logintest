<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Wallpaper.NoTitleBar"
    android:background="@drawable/gradient"
    tools:context="creator.test.logintest.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/test" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_action_user"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/usuario"
        android:layout_below="@+id/usuario"
        android:layout_marginTop="44dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_name"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:lineSpacingExtra="8sp"
        android:text="Cuestionarios EISI"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/iniciarsesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/contra"
        android:layout_marginTop="48dp"
        android:background="@drawable/borde_redondo"
        android:text="Iniciar Sesion" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iniciarsesion"
        android:layout_alignStart="@+id/iniciarsesion"
        android:layout_below="@+id/iniciarsesion"
        android:layout_marginTop="52dp"
        android:background="@drawable/borde_redondo"
        android:text="Registrar Usuario" />


</RelativeLayout>
