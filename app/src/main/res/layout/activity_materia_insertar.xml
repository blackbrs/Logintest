<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:theme="@android:style/Theme.Wallpaper.NoTitleBar"
    tools:context="creator.test.logintest.MateriaInsertarActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Crear Materia"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Codigo Materia"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/editCod"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNombreDocente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Unidades Valorativas"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/editNombreDocente"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/editCod"
        android:layout_below="@+id/textView11"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/editCod"
        android:layout_marginTop="33dp"
        android:text="Nombre Materia"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/buttonCrear"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/borde_redondo"
        android:onClick="insertarMateria"
        android:text="Crear" />

    <EditText
        android:id="@+id/editUnidadesVal"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/editNombreDocente"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

</RelativeLayout>