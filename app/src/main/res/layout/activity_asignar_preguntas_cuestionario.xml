<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creator.test.logintest.CuestionarioActualizarActivity">


    <Spinner
        android:id="@+id/materia"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/materia"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borde_redondo"
        android:text="Ver Ofertas" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/materia"
        android:layout_below="@+id/button12"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/borde_redondo"
        android:text="Agregar preguntas" />


    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_above="@+id/spinner6"
        android:layout_alignStart="@+id/spinner4"
        android:layout_marginBottom="25dp" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/spinner5"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner7"
        android:layout_alignStart="@+id/button13"
        android:layout_marginBottom="17dp"
        android:background="@drawable/borde_redondo"
        android:text="Filtrar Preguntas" />

    <Spinner
        android:id="@+id/spinner7"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_above="@+id/button15"
        android:layout_alignStart="@+id/spinner6"
        android:layout_marginBottom="57dp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:background="@drawable/borde_redondo"
        android:text="Crear Detalle cuestionario" />


</RelativeLayout>