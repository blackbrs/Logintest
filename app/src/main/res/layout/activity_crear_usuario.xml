<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:theme="@android:style/Theme.Wallpaper.NoTitleBar"
    tools:context="creator.test.logintest.CrearUsuario">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="12sp"
        android:text="Crear Nuevo Usuario"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:text="Carnet"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/carnet"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/carnet"
        android:layout_below="@+id/carnet"
        android:layout_marginTop="12dp"
        android:text="Nombre "
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/nombre"
        style="@android:style/Widget.EditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nombre"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="21dp"
        android:text="Apellido"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/apellido"
        android:layout_below="@+id/apellido"
        android:layout_marginTop="17dp"
        android:text="Correo"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/correo"
        android:layout_below="@+id/correo"
        android:layout_marginTop="18dp"
        android:text="Direccion"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/Direccion"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/CrearUsuaio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Direccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/borde_redondo"
        android:text="Crear Usuario"
        android:textSize="10sp" />
</RelativeLayout>
