<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creator.test.logintest.EvaluacionActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="TextView" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/borde_redondo"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/choice1"
        android:layout_below="@+id/choice1"
        android:layout_marginTop="36dp"
        android:background="@drawable/borde_redondo"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/choice2"
        android:layout_below="@+id/choice2"
        android:layout_marginTop="38dp"
        android:background="@drawable/borde_redondo"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/choice3"
        android:layout_below="@+id/choice3"
        android:layout_marginTop="40dp"
        android:background="@drawable/borde_redondo"
        android:onClick="onClick"
        android:text="Button" />

</RelativeLayout>
